---
import "../styles/global.css";
import Header from "../components/Header/index.astro";
import Footer from "../components/Footer/index.astro";
import _BgImage from "../assets/K22_BG_Seamless.png";
import { Font, getImage } from "astro:assets";
import { ClientRouter } from "astro:transitions";
const BgImage = await getImage({ src: _BgImage });
const backgroundUrl = `url(${BgImage.src})`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/og-image.jpg", Astro.site);
---

<html lang="en" style="scroll-behavior: smooth;">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>kueh22</title>
    <meta name="color-scheme" content="light only" />
    <meta name="description" content="landing page for kueh 22" />
    <meta property="og:site_name" content="kueh22" />
    <meta property="og:title" content="kueh22" />
    <meta property="og:type" content="website" /><meta
      property="og:description"
      content="landing page for kueh 22"
    />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:type" content="image/jpeg" /><meta
      property="og:image:width"
      content="1920"
    />
    <meta property="og:image:height" content="961" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={canonicalURL} />
    <Font cssVariable="--font-primary" preload />
    <ClientRouter transition:animate="slide" />
  </head>
  <body class="bg-image mx-auto max-w-fit text-brown">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style define:vars={{ backgroundUrl }}>
  .bg-image::before {
    --background-height: 100vh;
    background-attachment: scroll;
    content: "";
    display: block;
    height: var(--background-height);
    left: 0;
    pointer-events: none;
    position: fixed;
    top: 0;
    z-index: -1;
    transform: scale(1);
    width: 100vw;
    background-size: 240px;
    background-color: #0e9a61;
    background-image: var(--backgroundUrl);
    background-position: center;
    background-repeat: repeat;
  }
</style>
