---
import "../styles/global.css";
import Header from "../components/Header/index.astro";
import Footer from "../components/Footer/index.astro";
import _BgImage from "../assets/K22_BG_Seamless.png";
import { Font, getImage } from "astro:assets";
import { ClientRouter } from "astro:transitions";
const BgImage = await getImage({ src: _BgImage });
const backgroundUrl = `url(${BgImage.src})`;
---

<html lang="en" style="scroll-behavior: smooth;">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>kueh22</title>
    <meta name="color-scheme" content="light only" />
    <meta name="description" content="landing page for kueh 22" />
    <meta property="og:site_name" content="kueh22" />
    <meta property="og:title" content="kueh22" />
    <meta property="og:type" content="website" /><meta
      property="og:description"
      content="landing page for kueh 22"
    />
    <meta
      property="og:image"
      content="https://kueh22.org/assets/images/card.jpg?v=0eb2aded"
    />
    <meta property="og:image:type" content="image/jpeg" /><meta
      property="og:image:width"
      content="1280"
    />
    <meta property="og:image:height" content="800" /><meta
      property="og:url"
      content="https://kueh22.org"
    />
    <meta property="twitter:card" content="summary_large_image" />
    <link rel="canonical" href="https://kueh22.org" />
    <Font cssVariable="--font-primary" preload />
    <ClientRouter transition:animate="slide" />
  </head>
  <body class="bg-image mx-auto max-w-fit text-brown">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style define:vars={{ backgroundUrl }}>
  .bg-image::before {
    --background-height: 100vh;
    background-attachment: scroll;
    content: "";
    display: block;
    height: var(--background-height);
    left: 0;
    pointer-events: none;
    position: fixed;
    top: 0;
    z-index: -1;
    transform: scale(1);
    width: 100vw;
    background-size: 240px;
    background-color: #0e9a61;
    background-image: var(--backgroundUrl);
    background-position: center;
    background-repeat: repeat;
  }
</style>
